@model IEnumerable<redball.Models.TblPlServiceType>

@{
    ViewData["Title"] = "Ship";
}
<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

<p>Shippers will use this page to generate files which can be fed into their TMS.</p>

<table class="table">
    <thead>
        <tr>
            <th>Service Type</th>
            <th>Trailer Types</th>
        </tr>
    </thead>

    @foreach (var serviceType in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => serviceType.StName)
            </td>
            <td>
                @foreach (var trailerType in serviceType.TblPlTrailerType)
                {
                    <p>@trailerType.ToString()</p>
                }
            </td>
        </tr>
    }
</table>

<h3>Download Tender</h3>
<div class="row">
    <div class="col-xs-12 col-sm-6 col-md-8">
        <img src="~/images/highjump_logo.png" />
    </div>
